<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= link_to image_tag(product.image_url), product %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price">
        <% #number_to_currency(product.price, :unit => "gold pieces", :precision => 0, :format => "%n %u") %>
        <%= number_to_currency(product.price) %>
      </span>
      <%= button_to 'Add to Cart', line_items_path(:product_id => product), :remote => true %>
    </div>
  </div>
<% end %>

<% if @visits > 5 %>
  <div align="right">You have visited this page <%= pluralize(@visits, 'time', 'times') %> this session.</div>
<% end %>
