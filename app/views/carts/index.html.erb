<h1>Listing carts</h1>

<table>
  <tr>
    <th>Cart Id</th>
    <th>Actions</th>
  </tr>

<% @carts.each do |cart| %>
  <tr>
    <td><%= cart.id %></td>
    <td>
      <%= link_to 'Show', cart %><br />
      <%= link_to 'Edit', edit_cart_path(cart) %><br />
      <%= link_to 'Destroy', cart, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Cart', new_cart_path %>
