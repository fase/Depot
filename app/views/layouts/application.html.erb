<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">

      <div id="cart">
        <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
            <%= render @cart %>
          <% end %>
        <% end %>
      </div>

      <%= link_to "Home", :controller => "store", :action => "index" %><br />
      <a href="#">Questions</a><br />
      <a href="#">News</a><br />
      <a href="#">Contact</a><br />
      <p>
        <div style="color: white;">User connected at:</div>
        <div style="color: white; padding-left: 15px;"><%= I18n.l Date.today %> <%=I18n.l Time.now %></div>
      </p>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>

</body>
</html>
